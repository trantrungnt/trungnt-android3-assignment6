<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trungnt.mad3.techkids.smsmessage.MainActivity">

    <ListView
        android:id="@+id/lvDisplaySMSList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lvDisplaySMSList_height">
    </ListView>

    <Button
        android:id="@+id/btnClose"
        android:layout_below="@id/lvDisplaySMSList"
        android:text="@string/label_button_close"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height" />
    <Button
        android:id="@+id/btnSend"
        android:layout_below="@id/lvDisplaySMSList"
        android:layout_toRightOf="@id/btnClose"
        android:text="@string/label_button_send"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height" />


</RelativeLayout>
